{
    "version": 2,
    "builds": [
        {
            "src": "backend/index.js",
            "use": "@vercel/node",
            "config": {
                "maxDuration": 60
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/health",
            "dest": "backend/index.js"
        },
        {
            "src": "/ping",
            "dest": "backend/index.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/index.js"
        },
        {
            "src": "/user/(.*)",
            "dest": "backend/index.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/frontend/assets/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}